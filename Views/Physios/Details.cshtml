@model Physiosoft.Data.Physio

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Physio Details</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Physio Information</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">First Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Firstname)</dd>

            <dt class="col-sm-3">Last Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Lastname)</dd>

            <dt class="col-sm-3">Telephone:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telephone)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.PhysioId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
