@model Physiosoft.Data.User

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">User Details</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">User Information</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Username)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsAdmin)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IsAdmin)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.UserId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
