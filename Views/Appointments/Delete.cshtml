@model Physiosoft.Data.Appointment

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Delete</h1>

<h3>Are you sure you want to delete this appointment?</h3>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Appointment Information</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AppointmentDate):</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.AppointmentDate)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DurationMinutes):</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DurationMinutes)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AppointmentStatus):</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.AppointmentStatus)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notes):</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Notes)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PatientIssuse):</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PatientIssuse)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.HasScans):</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.HasScans)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Patient.PatientId):</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Patient.PatientId)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Physio.PhysioId):</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Physio.PhysioId)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="AppointmentID" />
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
